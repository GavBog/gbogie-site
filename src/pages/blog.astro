---
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'

const blogEntries = await getCollection('blog')
---

<Layout title="Gavin Bogie">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 m-5">
    {
      blogEntries.map((blog) => (
        <div class="grid grid-cols-[60%_40%] gap-4 mx-10">
          <div class="flex flex-col">
            <a href={`/blog/${blog.slug}`} class="text-xl font-bold">
              {blog.data.title}
            </a>
            <div>{blog.data.description}</div>
          </div>
          <div class="skeleton" />
        </div>
      ))
    }
  </div>
</Layout>
