---
const pathname = Astro.url.pathname.split('/').filter(Boolean)
const path = pathname.map((directory, index) => {
  const title = directory
    .split('-')
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ')
  const url = '/' + pathname.slice(0, index + 1).join('/')
  return {
    title,
    url,
  }
})
---

<div
  class="text-sm breadcrumbs fixed bottom-0 p-4 z-10 rounded-r-3xl bg-base-300"
>
  <ul>
    <li>
      <a href="/">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="w-4 h-4 stroke-current"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
          ></path>
        </svg>
        Home
      </a>
    </li>
    {
      path.map((directory) => (
        <li>
          <a href={directory.url}>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="w-4 h-4 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
              />
            </svg>
            {directory.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
