<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 m-5">
  {{#each blogs as |blog|}}
    <div class="grid grid-cols-[60%_40%] gap-4 mx-10">
      <div class="flex flex-col">
        <a href="{{blog.url}}" class="text-xl font-bold">{{blog.title}}</a>
        <div>{{blog.description}}</div>
      </div>
      <div class="skeleton"></div>
    </div>
  {{/each}}
</div>
